impl Solution {
    pub fn can_make_arithmetic_progression(mut arr: Vec<i32>) -> bool {
        arr.sort_unstable();
        let mut diff: i32 = arr[1] - arr[0];
        for i in 2..arr.len() {
            if arr[i] - arr[i-1] != diff {
                return false;
            }
        }
        return true;
    }
}
